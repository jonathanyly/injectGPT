{
  "manifest_version": 3,
  "name": "InjectGPT",
  "version": "2.0.0",
  "description": "Inject your custom system and developer prompt. Also lets you change the model and hardcode it!",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injector.js"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*"
      ]
    }
  ]
}